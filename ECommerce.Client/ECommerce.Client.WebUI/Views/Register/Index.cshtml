@model RegisterFormModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./index.html"><i class="fa fa-home"></i> Anasayfa</a>
                    <span>Kayıt Ol</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<div class="container p-5">
    <div class="card  m-3 shadow-lg p-3 mb-5 bg-white rounded">

        <div class="contact__form">
            <h5 class="text-center">KAYIT OL</h5>
            <div class="container mb-3">
                <div class="row">
                    <div class="col-2">
                    </div>
                    <div class="col-8">
                        <form method="post">
                            <span class="text-danger" asp-validation-for="Name"></span>
                            <input type="text" placeholder="Adınız" asp-for="Name" required>
                            <span class="text-danger" asp-validation-for="Surname"></span>
                            <input type="text" placeholder="Soyadınız" asp-for="Surname" required>
                            <span class="text-danger" asp-validation-for="UserName"></span>
                            <input type="text" placeholder="Kullanıcı Adınız" asp-for="UserName" required>
                            <span class="text-danger" asp-validation-for="Mail"></span>
                            <input type="text" placeholder="Mail Adresiniz" asp-for="Mail" required>
                            <span class="text-danger" asp-validation-for="Password"></span>
                            <input type="password" placeholder="Şifreniz" asp-for="Password" required>
                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            <input type="password" placeholder="Şifreniz(Tekrar)" asp-for="ConfirmPassword" required>

                            <button type="submit" class="site-btn">Kayıt Ol</button>
                            <div class="mt-2">
                                <p>Zaten hesabın var mı? <a href="/Login/Index/">Giriş Yap.</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


